name: Continuous Integration & Deployment (Main Branch)

# This workflow is triggered on pushes to the 'main' branch.
on:
  push:
    branches:
      - main
  # Allows you to run this workflow manually from the Actions tab
  workflow_dispatch:

# Grant GITHUB_TOKEN the required permissions for GitHub Pages deployment
permissions:
  contents: read
  pages: write
  id-token: write

jobs:
  deploy_pages:
    # Environment name links to your GitHub Pages settings
    environment:
      name: github-pages
      url: ${{ steps.deployment.outputs.page_url }}
      
    runs-on: ubuntu-latest
    
    steps:
      - name: 1. Checkout Repository Code
        # This action fetches the code from your repository
        uses: actions/checkout@v4

      - name: 2. Setup GitHub Pages
        # Configures the GitHub Pages environment
        uses: actions/configure-pages@v4

      - name: 3. Upload Site Artifact for Deployment
        # Uploads the entire contents of the repository root (where index.html is)
        uses: actions/upload-pages-artifact@v3
        with:
          # The entire repository content is the artifact for static HTML/CSS
          path: '.' 

      - name: 4. Deploy to GitHub Pages
        # Triggers the actual deployment to your public URL
        id: deployment
        uses: actions/deploy-pages@v4
